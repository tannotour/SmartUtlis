<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myListItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/myListItemImg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_svg_placeholder" />

    <TextView
        android:id="@+id/myListItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_alignBottom="@+id/myListItemImg"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        tool:text="2019-02-15" />

    <TextView
        android:id="@+id/myListItemAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/myListItemTime"
        android:layout_toEndOf="@+id/myListItemImg"
        android:layout_toStartOf="@+id/myListItemTime"
        android:maxLines="1"
        tool:text="四川省成都市双流区" />

    <TextView
        android:id="@+id/myListItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/myListItemImg"
        android:layout_toEndOf="@+id/myListItemImg"
        android:maxLines="2"
        android:textSize="14sp"
        tool:text="TextView"
        android:layout_above="@+id/myListItemTime" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/myListItemImg"
        android:layout_marginTop="12dp"
        android:background="@color/colorGray" />
</RelativeLayout>
