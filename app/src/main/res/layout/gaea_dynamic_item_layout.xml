<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/text_bg_blue"
        android:gravity="center_vertical"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="注意" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level"
        android:layout_alignTop="@+id/level"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/level"
        android:gravity="center_vertical"
        android:textSize="12sp"
        tools:text="持续1小时" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/level"
        android:gravity="center_vertical"
        android:textColor="@color/bar_divider"
        android:textSize="12sp"
        tools:text="2017-08-29 15:32" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/level"
        android:layout_below="@+id/level"
        android:layout_marginTop="6dp"
        android:maxLines="3"
        android:textSize="14sp"
        tools:text="文本内容" />

    <GridLayout
        android:id="@+id/imgs"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignStart="@+id/content"
        android:layout_below="@+id/content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgs0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgs8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </GridLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgs"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        tools:text="四川省成都市成华区二仙桥东三路1号" />

    <LinearLayout
        android:id="@+id/fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/thumbupNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_thumb_up_black_24dp"
            android:gravity="center"
            android:textColor="@color/bar_divider"
            tools:text="100" />

        <TextView
            android:id="@+id/thumbdownNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_thumb_down_black_24dp"
            android:gravity="center"
            android:textColor="@color/bar_divider"
            tools:text="10"/>

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_comment_black_24dp"
            android:gravity="center"
            android:textColor="@color/bar_divider"
            tools:text="11"/>

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_share_black_24dp"
            android:gravity="center"
            android:textColor="@color/bar_divider"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/fun"
        android:background="@color/bar_divider" />
</RelativeLayout>